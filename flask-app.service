[Unit]
Description=Flask CI/CD Application
After=network.target

[Service]
Type=simple
User=jenkins
WorkingDirectory=/var/lib/jenkins/workspace/flask-cicd-app
Environment="PATH=/var/lib/jenkins/workspace/flask-cicd-app/venv/bin"
ExecStart=/var/lib/jenkins/workspace/flask-cicd-app/venv/bin/gunicorn --bind 0.0.0.0:5000 --workers 2 app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
